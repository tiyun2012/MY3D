{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Create Build Directory",
            "type": "shell",
            "command": "cmake -E make_directory ${workspaceFolder}/build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build"
            ],
            "options": { "cwd": "${workspaceFolder}/build" },
            "group": "build",
            "problemMatcher": ["$msCompile"],
            "dependsOn": "CMake: Create Build Directory"
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Debug",
                "--verbose"
            ],
            "options": { "cwd": "${workspaceFolder}/build" },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"],
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "Run Ti3D",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/Ti3D${command:cmake.buildProgramExtension}",
            "options": { "cwd": "${workspaceFolder}/build/bin" },
            "group": "build",
            "problemMatcher": [],
            "dependsOn": "CMake: Build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}